{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "ts-node": {
    // "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "rootDir": "./src"
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
